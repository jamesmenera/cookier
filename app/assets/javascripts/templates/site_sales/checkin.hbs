<h2>{{location}} <small>{{siteSaleTime}}</small></h2>
<h5>Checking in Site Sale Inventory</h5>
<div class="twelve columns">
  <form class="custom row" id="inventory-editor">
    {{#each cookieCases}}
      <div class="row cookie-count mbs">
        <div class="three columns">
          <h3>{{name}}</h3>
        </div>
        <div class="three columns cases">
          <label class="control-label" for="cookies-{{id}}">Cases</label>
          {{view Ember.TextField valueBinding="casesBaseTenCheckIn" placeholder="Cases Quantity" required="true" }}
        </div>
        <div class="two columns boxes">
          <label class="control-label" for="cookies-{{id}}">Boxes</label>
          {{view Ember.TextField valueBinding="boxesLeftOverCheckIn" placeholder="Boxes Quantity" required="true" }}
        </div>
        <div class="die"></div>
      </div>
    {{/each}}
    <a href='#' {{action 'update' content}} class='button radius'>{{buttonTitle}}</a>
  </form>
</div>