<h4>{{location}}</h4>
<p><span class="label success radius">{{siteSaleTime}}</span></p>
<div class="twelve columns">
  <h3>Starting Site Sale Inventory</h3>
  <form class="custom row" id="inventory-editor">
    {{#each cookieCases}}
      <div class="row cookie-count mbs">
        <div class="three columns">
          <h3>{{name}}</h3>
        </div>
        <div class="three columns cases">
          <label class="control-label" for="cookies-{{id}}">Cases</label>
          {{view Ember.TextField valueBinding="casesBaseTenCheckOut" placeholder="Cases Quantity" required="true" }}
        </div>
        <div class="two columns boxes">
          <label class="control-label" for="cookies-{{id}}">Boxes</label>
          {{view Ember.TextField valueBinding="boxesLeftOverCheckOut" placeholder="Boxes Quantity" required="true" }}
        </div>
        <div class="die"></div>
      </div>
    {{/each}}
    <a href='#' {{action 'update' content}} class='button radius'>{{buttonTitle}}</a>
  </form>
</div>