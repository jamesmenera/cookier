<div class="row">
  <div class="columns three">
    <h4>Site Sales</h4>
    <ul class="no-bullet">
      {{#each siteSale in controller}}
        <li>{{#linkTo siteSales.show siteSale}}{{siteSale.locationName}} <span class='label secondary radius'>{{siteSale.siteSaleDateSmall}}</span> {{/linkTo}}</li>
      {{/each}}
    </ul>
    {{#linkTo siteSales.new class="button small radius mbm"}}Add New Site Sale{{/linkTo}}
  </div>
  <div class="columns nine">
    {{outlet}}
  </div>
</div>