    <!-- Title Area -->
    <li class="name">
      <h1>
        {{#linkTo index}}
          Cookier
        {{/linkTo}}
      </h1>
    </li>
    <li class="toggle-topbar"><a href="#"></a></li>
  </ul>
  <section>
    <!-- Left Nav Section -->
    <ul class="left">
      <li class="divider"></li>
      <li>{{#linkTo siteSales }}Site Sales{{/linkTo}}</li>
      <li class="divider"></li>
      <li>{{#linkTo participants }}Participants{{/linkTo}}</li>
      <li class="divider"></li>
      <li>{{#linkTo cookieCases }}Cookies{{/linkTo}}</li>

      <li class="divider hide-for-small"></li>
